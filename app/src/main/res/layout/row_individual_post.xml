<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xlmns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xlmns:cardBackgroundColor="@color/white"
    xlmns:cardUseCompatPadding="true"
    xlmns:cardCornerRadius="3dp"
    xlmns:cardElevation="3dp"
    xlmns:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pFpIV"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userNamePostTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="userName"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/postTimeTV"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:color="@color/black"
                    android:text="12:12" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/moreBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_more_horiz" />

        </LinearLayout>

        <TextView
            android:id="@+id/postTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:color="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:autoLink="all"/>

        <TextView
            android:id="@+id/postDescriptionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:color="@color/black"
            android:text="Post description."
            android:textColor="@color/black"
            android:autoLink="all"/>

        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F0F0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/likesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 likes" />


            <TextView
                android:id="@+id/commentNumTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 comments"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/likeBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_like_off"
                android:drawablePadding="5dp"
                android:text="Like"
                xlmns:backgroundTint="#EF7070" />

            <Button
                android:id="@+id/commentBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_comment"
                android:text="Comment"
                xlmns:backgroundTint="#EF7070" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>