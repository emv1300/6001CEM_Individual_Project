<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".social_media.DailyChallengeMain">
    <Button
        android:id="@+id/goBackChallengeMainBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewAllPostsBT" />

    <Button
        android:id="@+id/makeChallengePostBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make a post"
        app:layout_constraintBottom_toTopOf="@+id/viewAllPostsBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neutralDailyTV" />

    <Button
        android:id="@+id/viewChallengePostsBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Posts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478" />

    <TextView
        android:id="@+id/neutralDailyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's word is:"
        app:layout_constraintBottom_toTopOf="@+id/viewAllPostsBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dailyWordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Internet"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/viewAllPostsBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/neutralDailyTV"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/dailyChallengeUserGuideBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user guide"
        app:layout_constraintBottom_toTopOf="@+id/goBackArtMainBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewAllPostsBT" />
</androidx.constraintlayout.widget.ConstraintLayout>